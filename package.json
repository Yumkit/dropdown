{
  "name": "@yumkit/popover",
  "version": "0.1.18",
  "description": "An extensible popover/dropdown/tooltip component for React",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "scripts": {
    "test": "run-s test:lint test:jest",
    "test:lint": "tsc --noEmit && eslint 'src/**/*.{js,ts,tsx}' --quiet",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "start": "run-s build:clean build:watch",
    "build": "run-s build:clean build:esm build:rename build:cjs",
    "build:watch": "tsc -p tsconfig.json --watch",
    "build:clean": "rimraf dist",
    "build:rename": "renamer -f '.js' --replace '.esm.js' 'dist/**'",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json"
  },
  "files": [
    "dist/"
  ],
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yumkit/popover.git"
  },
  "author": {
    "name": "Anton Ignatev",
    "url": "https://github.com/ignatevdev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Yumkit/popover/issues"
  },
  "homepage": "https://github.com/Yumkit/popover#readme",
  "peerDependencies": {
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-typescript": "^7.8.3",
    "@babel/types": "^7.8.3",
    "@emotion/core": "^10.0.28",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "eslint": "6.x",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-flowtype": "3.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.x",
    "jest": "^25.1.0",
    "jest-watch-typeahead": "^0.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "renamer": "^1.1.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.2.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@popperjs/core": "^2.0.6",
    "@restart/hooks": "^0.3.21"
  }
}
